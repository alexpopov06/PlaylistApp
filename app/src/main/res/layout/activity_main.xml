<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/s16">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/s24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/s32"
        android:orientation="vertical"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/pos1"
            android:backgroundTint="@color/white"
            android:text="@string/search"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/s8"
            android:layout_marginStart="@dimen/s8"
            android:layout_marginEnd="@dimen/s8"
            app:icon="@drawable/lup"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/s8"
            app:iconSize="@dimen/s24"
            app:iconTint="@color/black"
            app:cornerRadius="@dimen/s16"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:id="@+id/pos2"
            android:text="@string/med"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/s8"
            android:layout_marginStart="@dimen/s8"
            android:layout_marginEnd="@dimen/s8"
            app:icon="@drawable/med"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/s8"
            app:iconSize="@dimen/s24"
            app:iconTint="@color/black"
            app:cornerRadius="@dimen/s16"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:id="@+id/pos3"
            android:text="@string/set"
            android:textSize="@dimen/s24"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/s8"
            android:layout_marginEnd="@dimen/s8"
            app:icon="@drawable/setting"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/s8"
            app:iconSize="@dimen/s24"
            app:iconTint="@color/black"
            app:cornerRadius="@dimen/s16"/>
    </LinearLayout>
</LinearLayout>
